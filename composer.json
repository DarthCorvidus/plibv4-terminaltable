{
	"minimum-stability": "dev",
	"prefer-stable": true,
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/DarthCorvidus/plibv4-vtc",
			"no-api": true
		},
		{
			"type": "vcs",
			"url": "https://github.com/DarthCorvidus/plibv4-longeststring",
			"no-api": true
		}
	],
	"name": "plibv4/terminaltable",
	"require": {
			"plibv4/vtc": "dev-main",
			"plibv4/longeststring": "dev-main"
	},
	"autoload": {
        "classmap": ["src/"]
    },
	"require-dev": {
		"vimeo/psalm": "^6",
		"phpunit/phpunit": "^9"
	},
	"scripts": {
		"test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
		"testdox": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox --colors=always tests",
		"coverage": "phpdbg -qrr ./vendor/bin/phpunit --bootstrap vendor/autoload.php tests --coverage-text",
		"coverage-html": "phpdbg -qrr ./vendor/bin/phpunit --bootstrap vendor/autoload.php tests --coverage-html coverage",
		"psalm": "./vendor/bin/psalm --show-info=true --no-cache",
		"all": ["./vendor/bin/phpunit --bootstrap vendor/autoload.php tests",
				"./vendor/bin/psalm --show-info=true --no-cache",
				"phpdbg -qrr ./vendor/bin/phpunit --bootstrap vendor/autoload.php tests --coverage-text"]
	}
}
